<div class="modal fade" id="modalDeployerProgress" tabindex="-1" 
    role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" 
>
    <div class="modal-dialog" role="document" style="max-width: 1400px;">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Deployer Progress</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {{ form_start( deployerForm, { 'attr': {'class': 'form-horizontal', 'id': 'formDeployData'} } ) }}
                    {{ form_widget(deployerForm.projectId, {'value': item.id}) }}
                    {{ form_widget(deployerForm.repertoryId) }}
                    
                    <div class="form-row mb-2">
                        <div class="col-sm form-group">
                            {{ form_label(deployerForm.apiHost, null, {
                                'label_attr': {'class': 'col-form-label'}
                                }) 
                            }}
                            
                            {{ form_widget(deployerForm.apiHost, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    
                    <div class="form-row mb-2">
                        <div class="col-sm form-group">
                            {{ form_label(deployerForm.mapper, null, {
                                'label_attr': {'class': 'col-form-label'}
                                }) 
                            }}
                            
                            {{ form_widget(deployerForm.mapper, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    
                {{ form_end(deployerForm, {'render_rest': false}) }}
                
                <div id="consoleDeployer" class="col-sm-12 console border border-dark" style="margin: 20px 0 20px 0; padding: 10px 15px 10px 15px; display: none">
                    <div id="consoleDeployerBody" style="height: 200px; overflow: scroll;"></div>
                </div>
                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnRunDeployer">Run Deployer</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="btnCloseDeployerProgress">Close</button>
            </div>
        </div>
    </div>
</div>
