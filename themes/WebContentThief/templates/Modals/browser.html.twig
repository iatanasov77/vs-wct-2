<div class="modal fade" id="modalBrowser" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document" style="max-width: 1400px;">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">{{ 'vs_wct.template.browser' | trans( {},'WebContentThief' ) }}</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="{{ 'vs_application.form.close' | trans( {},'VSApplicationBundle' ) }}">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
            
                <!-- Browser Card -->
                <div class="card">
                    <div class="card-body">
                        <span class="dashboard-spinner spinner-md browser-spinner" id="browser-spinner"></span>
                        <div class="col-sm-12" style="margin: 20px 0 20px 0;">
                            <div class="form-group">
                                <label for="project_xqueryField">{{ 'vs_wct.template.url' | trans( {},'WebContentThief' ) }}: </label>
                                <div class="input-group mb-3">
                                    <input type="text" name="url" id="urlInput" class="form-control" />
                                    <div class="col-sm-1">
                                        <button type="button" id="ModalBrowser_BtnBrowse"
                                            class="btn btn-primary btnBrowse" 
                                        	data-browserUrl="{{ url('vs_wct_browser_browse') }}"
                                            data-urlInput="#urlInput"
                                        >
                                            {{ 'vs_wct.template.browse' | trans( {},'WebContentThief' ) }}
                                        </button>
                                    </div>
                                </div>                                  
                            </div>
                            <iframe id="remoteBrowser" style="display:block; width:100%; height:500px;" data-browserCss="{{ asset('build/web-content-thief/css/browser.css') }}"></iframe>
                        </div>
                    
                        <input type="hidden" id="project_fieldsContainer" name="project[fieldsContainer]" val="" />
                        
                        <div class="col-sm-1">&nbsp;</div>
                        
                        <div class="input-group">
                        	<label for="project_xqueryField" class="col-sm-1 pt-2 fw-bold">{{ 'vs_wct.template.set_to_field' | trans( {},'WebContentThief' ) }}: </label>
                        	<div class="col-sm-6"> 
                            	<select id="project_xqueryField" name="project[xqueryField]" class="form-control xquery-field-select"></select>
                            </div>
                        </div>
                        
                        <div class="col-sm-1">&nbsp;</div>
                        
                        <fieldset class="border border-dark rounded p-3">
                            <legend class="w-auto float-none ps-2 pe-2">{{ 'vs_wct.template.fields' | trans( {},'WebContentThief' ) }}</legend>
                            <div id="fieldsContainer"></div>
                        </fieldset>
                    </div>
                </div>
                
                <!-- Browser-Log Card -->
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title border-bottom pb-2">{{ 'vs_wct.template.browser_log' | trans( {},'WebContentThief' ) }}</h4>
                        <div class="browser-log" id="browserLogContainer"></div>
                    </div>
                </div>
                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" id="btnCloseBrowser">
                    {{ 'vs_application.form.close' | trans( {},'VSApplicationBundle' ) }}
                </button>
                <button type="button" class="btn btn-primary" id="btnSaveFieldsXquery">
                    {{ 'vs_wct.template.save_changes' | trans( {},'WebContentThief' ) }}
                </button>
            </div>
        </div>
    </div>
</div>
