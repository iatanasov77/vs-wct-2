<ul class="dropdown-menu dropdown-submenu dropdown-submenu-left profile-langmenu">
    {% for locale in widget.params.availableLocales %}
        {% if locale.active %}
            <li>
                <a class="dropdown-item " href="{{ path( 'app_set_locale', {'locale': locale.code} ) }}">
                    <i class="flag flag-{{ ( locale.code | split( '_' ) )[1] | lower }}"></i>
                    {{ locale.title }}
                </a>
           </li>
       {% endif %}
    {% endfor %}
</ul>
