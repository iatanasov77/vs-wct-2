{% extends 'knp_menu.html.twig' %}

{% block root %}
    {% for id, parentItem in item.children %}
        {% if parentItem.extra( 'divider' ) %}
            <hr class="mt-1 mb-1"/>
        {% else %}
            <a class="dropdown-item" href="{{ parentItem.uri }}">
            	<i class="{{ parentItem.attributes.iconClass }}"></i>{{ parentItem.name }}
            </a>
        {% endif %}
    {% endfor %}
{% endblock %}
