{% extends 'knp_menu.html.twig' %}

{% block root %}
    <!-- sidebar menu start-->
    <ul class="navbar-nav flex-column">
        <li class="nav-divider">
            Menu
        </li>
        
        {% for parentItem in item.children %}
        <li class="nav-item ">
            <a class="nav-link"
            	data-bs-toggle="collapse" aria-expanded="false" data-bs-target="#submenu-{{ loop.index }}" aria-controls="submenu-{{ loop.index }}"
             	href="{{ parentItem.uri }}"
             >
             {% if parentItem.attributes and parentItem.attributes.iconClass %}
                <i class="{{ parentItem.attributes.iconClass }}"></i>
             {% endif %}
                <span>{{ parentItem.name }}</span>
            {% if(parentItem.hasChildren) %}
                <!--  <span class="menu-arrow arrow_carrot-right"></span> -->
            {% endif %}
            </a>
            {% if(parentItem.hasChildren) %}
            <div id="submenu-{{ loop.index }}" class="collapse submenu" style="">
            	<ul class="nav flex-column">
                    {% for childItem in parentItem.children %}
                        {% if( childItem.displayed ) %}
                            <li class="nav-item"><a class="nav-link" href="{{ childItem.uri }}">{{ childItem.name }}</a></li>
                        {% endif %}
                    {% endfor %}
            	</ul>
            </div>
            {% endif %}
        </li>
        {% endfor %}
    </ul>
    <!-- sidebar menu end-->
{% endblock %}
