{% extends "base.html.twig" %}

{% block title %}{{ parent() }} :: Project Repertory Preview{% endblock %}
{% block pageTitle %}<i class="icon_genius"></i> Project Repertory Preview{% endblock %}

{% block content %}
    <div class="row">   
        <div class="col-lg-12">
            <section class="panel">
                <div class="panel-body">
                    <div class="row form-group input-group"></div>
                            
                    <div class="row">
                    {% for item in repertory.items %}
                        <div class="col-xl-5 col-lg-6 col-md-6 col-sm-12 col-12">
                            <div class="card">
                                <h5 class="card-header">Repertory Item {{ loop.index }}</h5>
                                <div class="card-body p-0">
                                    <div class="row">&nbsp;</div>
                                    
                                {% for field in item.fields %}
                                    <div class="row">
                                        <div class="col-lg-3 border-right">
                                            {{ field.projectField.title }}:
                                        </div>
                                        <div class="col-lg-9 col-lg-offset-1">
                                        {% if field.projectField.type == 'text' %}
                                            <span>{{ field.content | raw }}</span>
                                        {% elseif field.projectField.type == 'link' %}
                                            <span>
                                                <a href="{{ field.content }}">{{ field.content | raw }}</a>
                                            </span>
                                        {% elseif field.projectField.type == 'picture' %}
                                            <span>
                                                <img src="{{ field.content }}" />
                                            </span>
                                        {% endif %}
                                        </div>
                                    </div>
                                {% endfor %}
                                    
                                </div>
                                <div class="card-footer text-center">
                                    <a href="#" class="btn-primary-link">{# View Details #}</a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                    </div>
                    
                    <div class="row form-group input-group"></div>
                    <div class="row form-group input-group"></div>
                </div>
            </section>
        </div>
    </div>
{% endblock %}