{% extends "base.html.twig" %}

{% block title %}{{ parent() }} :: {{ 'vs_wct.template.test_browser' | trans( {},'WebContentThief' ) }}{% endblock %}
{% block pageTitle %}<i class="fas fa-search"></i> {{ 'vs_wct.template.test_browser' | trans( {},'WebContentThief' ) }}{% endblock %}

{% block content %}
    <div class="row">   
        <div class="col-lg-12">
            <section class="panel">
                <div class="panel-body">
                    <div class="row form-group input-group"></div>
                    <div class="row form-group input-group"></div>
                            
                    <div class="ml-4">
                        <button type="button" class="btn btn-primary btnOpenBrowser"
                            data-bs-toggle="modal" data-bs-target="#modalBrowser"
                        >{{ 'vs_wct.template.browser' | trans( {},'WebContentThief' ) }}</button>
                    </div>
                    
                    <div class="row form-group input-group"></div>
                    <div class="row form-group input-group"></div>
                </div>
            </section>
        </div>
    </div>
{% endblock %}

{% block modals %}
    {% include 'Modals/browser.html.twig' %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    
    {{ encore_entry_script_tags( 'js/browser', null, 'WebContentThief' ) }}
    {{ encore_entry_script_tags( 'js/projects-edit', null, 'WebContentThief' ) }}
{% endblock %}
