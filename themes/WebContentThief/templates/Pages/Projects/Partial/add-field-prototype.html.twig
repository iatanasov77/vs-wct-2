<div class="row mb-2">
	<div class="col-lg-3">
		{{ form_widget(form.type, {'attr': {'class': 'form-control fieldType'}}) }}
    </div>
    <div class="col-lg-3">
        {{ form_widget(form.title, {'attr': {'class': 'form-control fieldTitle'}}) }}
    </div>
    <div class="col-lg-4">
        {{ form_widget(form.xquery, {'attr': {'class': 'form-control m-bot15 fieldXquery'}}) }}
    </div>
	<div class="col-lg-1">
	    <a href="javascript:;" class="btn btn-success btnAddField"><i class="icon_plus_alt2"></i></a>
	    <a href="javascript:;" class="btn btn-danger btnRemoveField"><i class="icon_close_alt2"></i></a>
	</div>
</div>
