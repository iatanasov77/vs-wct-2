{% extends "layout.html.twig" %}

{% block title %}{{ parent() }} :: Edit Fieldset{% endblock %}

{% block pageTitle %}<i class="icon_genius"></i> Edit Fieldset{% endblock %}

{% block content %}
    <div class="row">   
        <div class="col-lg-12">

            {{ form_start(form, { 'attr': {'class': 'form-horizontal '} }) }}
            {{ form_widget(form._token) }}

            {% if form_errors(form) is not empty %}
                <div class="alert alert-block alert-danger fade in">
                    <button type="button" class="close close-sm" data-dismiss="alert">
                        <i class="icon-remove"></i>
                    </button>
                    <strong>Error!</strong> {{ form_errors(form) }}
                </div>
            {% endif %}
            <section class="panel">
                <header class="panel-heading"> Edit Fieldset </header>
                <div class="panel-body">
                    <div class="form-group">    
                        {{ form_label(form.enabled, null, {
                            'label_attr': {'class': 'control-label col-lg-1'}
                            }) 
                        }}
                        <div class="col-lg-10">
                            <div class="checkbox">
                                {{ form_widget(form.enabled) }}
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.title, null, {
                            'label_attr': {'class': 'col-sm-1 control-label'}
                            }) 
                        }}
                        <div class="col-sm-10">
                            {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                    <fieldset>
                        <legend>Fields</legend>

                        <div class="fieldsContainer" data-prototype="{% filter escape %}{% include 'IAWebContentThiefBundle:Fieldsets:add-field-prototype.html.twig' with {'form': form.fields.vars.prototype} %}{% endfilter %}">
                            {% for field in form.fields %}
                                {% include 'IAWebContentThiefBundle:Fieldsets:add-field-prototype.html.twig' with {'form': field} %}
                            {% endfor %}
                        </div>

                    </fieldset>    
                </div>
            </section>
            {{ form_widget(form.btnSave, {'attr': {'class': 'btn btn-primary', 'id':'btnSave'}}) }}
            {{ form_widget(form.btnCancel, {'attr': {'class': 'btn btn-default', 'id':'btnCancel'}}) }}
            {{ form_end(form, {'render_rest': false}) }}

        </div>
    </div>   
{% endblock content %}

{% block endDocumentScripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('build/jquery-duplicate-fields.js') }}"></script>
    <script type="text/javascript" src="{{ asset('build/projects-edit.js') }}"></script>
{% endblock %}
