{% extends "layout.html.twig" %}
{% block title %}{{ parent() }} :: List Fieldsets{% endblock %}

{% block pageTitle %}<i class="icon_genius"></i> List Fieldsets{% endblock %}

{% block content %}
    <div class="row">   
        <div class="col-lg-12">
            <section class="panel">
                <table class="table table-striped table-advance table-hover">
                    <tr>
                        <th width="50">N</th>
                        <th>Title</th>
                        <th width="150">Action</th>
                    </tr>
                    {% for item in fieldsets %}
                        <tr>
                            <td>
                                <input type="checkbox" name="active[{{ item.getId() }}]" />
                                {{ item.getId() }}
                            </td>
                            <td>
                                <a href="{{ path('ia_web_content_thief_fieldsets_update', {'id': item.getId()}) }}">
                                    {{ item.getTitle() }}
                                </a>
                            </td>

                            <td>
                                <div class="btn-group">
                                    <div class="btn-group">
                                        <a class="btn btn-primary" href="{{ path('ia_web_content_thief_fieldsets_update', {'id': item.id}) }}">
                                            <i class="glyphicon glyphicon-pencil"></i>
                                        </a>
                                        <a class="btn btn-danger btnDelete" href="{{ path('ia_web_content_thief_fieldsets_delete', {'id': item.id}) }}">
                                            <i class="icon_close_alt2"></i>
                                        </a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            </section>
        </div>
    </div>
{% endblock %}

{% block endDocumentScripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('build/fieldsets.js') }}"></script>
{% endblock %}