<div class="modal fade" id="modalBrowser" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document" style="max-width: 1400px;">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="col-sm-12" style="margin: 20px 0 20px 0;">
        <div id="loader">
            <div class="d-flex justify-content-center">
                <div class="spinner-border" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
            </div>
        </div>
        
        <iframe id="remoteBrowser" style="display:block; width:100%; height:500px;" data-browserCss="{{ asset('css/browser.css') }}"></iframe>
        </div>
        
        <div class="col-sm-1">&nbsp;</div>
        
        <div class="input-group">
									
        {{ form_label(form.xquery, null, {
            'label_attr': {'class': 'col-sm-1 control-label'}
            }) 
        }}
        <div class="col-sm-6">
            {{ form_widget(form.xquery, {'attr': {'class': 'form-control'}}) }}
        
        </div>
        {{ form_label(form.xqueryField, null, {
            'label_attr': {'class': 'col-sm-1 control-label'}
            }) 
        }}
        <div class="col-sm-2">
            {{ form_widget(form.xqueryField, {'attr': {'class': 'form-control xquery-field-select'}}) }}
        
            </div> 
            <div class="col-sm-1">
            	<button type="button" id="btnSetXquery" class="btn btn-primary btnBrowse">Set Xquery</button>
            </div>
        </div>
        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
