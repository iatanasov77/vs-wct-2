{% extends "layout.html.twig" %}

{# Import Macros #}
{% import 'macros/alerts.html.twig' as alerts %}
{% from 'macros/misc.html.twig' import pagination %}

{# Override Blocs #}
{% block title %}{{ parent() }} :: List Projects{% endblock %}
{% block pageTitle %}<i class="icon_genius"></i> List Projects{% endblock %}
{% block content %}
    <div class="row">   
        <div class="col-lg-12">
            <section class="panel">
                {% if items|length > 0 %}
                    <table class="table table-striped table-advance table-hover">
                        <tr>
                            <th width="50">N</th>
                            <th>Title</th>
                            <th width="150">Action</th>
                        </tr>
                        {% for item in items %}
                            <tr>
                                <td>
                                    <input type="checkbox" name="active[{{ item.getId() }}]" />
                                    {{ item.getId() }}
                                </td>
                                <td><a href="{{ path('ia_web_content_thief_projects_update', {'id': item.getId()}) }}?id={{ item.id }}">{{ item.getTitle() }}</a></td>

                                <td>
                                    <div class="btn-group">
                                        <div class="btn-group">
                                            <a class="btn btn-primary" href="{{ path('ia_web_content_thief_projects_update', {'id': item.id}) }}?id={{ item.id }}">
                                                <i class="glyphicon glyphicon-pencil"></i>
                                            </a>
                                            <a class="btn btn-danger btnDelete" href="{{ path('ia_web_content_thief_projects_delete', {'id': item.id}) }}">
                                                <i class="icon_close_alt2"></i>
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </table>
                {% else %}
                    {{ alerts.info('sylius.ui.there_are_no_mappers_to_display'|trans) }}
                {% endif %}
            </section>
        </div>
        {{ pagination(items) }}
    </div>
{% endblock %}
{% block endDocumentScripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('build/projects.js') }}"></script>
{% endblock %}