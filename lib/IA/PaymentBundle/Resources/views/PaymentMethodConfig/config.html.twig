{% extends "layout.html.twig" %}
{% block title %}{{ parent() }} :: Payment Method Config{% endblock %}

{% block pageTitle %}<i class="icon_genius"></i> Payment Method Config{% endblock %}

{% block content %}
    <div class="row">   
        <div class="col-lg-12">
            {{ form_start(form, { 'attr': {'class': 'form-horizontal '} }) }}
                {{ form_widget(form._token) }}
                {{ form_widget(form.gatewayName) }}
                {{ form_widget(form.factoryName) }}

                {% if form_errors(form) is not empty %}
                    <div class="alert alert-block alert-danger fade in">
                        <button type="button" class="close close-sm" data-dismiss="alert">
                            <i class="icon-remove"></i>
                        </button>
                        <strong>Error!</strong> {{ form_errors(form) }}
                    </div>
                {% endif %}
                <section class="panel">
                    <header class="panel-heading"> Payment Method Config </header>
                    <div class="panel-body">
                        <div class="form-group"> 
                            <label class="control-label col-lg-1 required">Gateway:</label>
                            <div class="col-lg-6" style="margin-top: 7px;">{{ form.gatewayName.vars.value }}</div>
                        </div> 
                    
                        <div class="form-group">    
                            <label class="control-label col-lg-1 required">Factory:</label>
                            <div class="col-lg-6">{{ form.factoryName.vars.value }}</div>
                        </div>
                    {% if form.config.sandbox is defined %}
                        <div class="form-group">
                            {{ form_label(form.useSandbox, null, {
                                'label_attr': {'class': 'control-label col-lg-1'}
                                }) 
                            }}
                            <div class="col-lg-10">
                                <div class="checkbox">
                                    {{ form_widget(form.useSandbox) }}
                                </div>
                            </div>
                        </div>
                    {% endif %}
                        <fieldset>
                            <legend>Config Options</legend>

                            <div class="fieldsContainer">
                                {{ form_widget(form.config.factory) }}
                                {% if form.config.sandbox is defined %}
                                    {{ form_widget(form.config.sandbox) }}
                                {% endif %}
                                
                                {% for key,field in form.config if key not in ['factory', 'sandbox'] %}
                                    <div class="form-group">    
                                        {{ form_label(field, null, {
                                            'label_attr': {'class': 'control-label col-lg-1'}
                                            }) 
                                        }}
                                        <div class="col-lg-10">
                                            <div class="checkbox">
                                                {{ form_widget(field) }}
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>

                        </fieldset>    
                            
                        <div class="form-group"></div>
                            
                        <fieldset>
                            <legend>Sandbox Config Options</legend>

                            <div class="fieldsContainer">
                                {{ form_widget(form.sandboxConfig.factory) }}
                                {% if form.sandboxConfig.sandbox is defined %}
                                    {{ form_widget(form.config.sandbox) }}
                                {% endif %}
                                
                                {% for key,field in form.sandboxConfig if key not in ['factory', 'sandbox'] %}
                                    <div class="form-group">    
                                        {{ form_label(field, null, {
                                            'label_attr': {'class': 'control-label col-lg-1'}
                                            }) 
                                        }}
                                        <div class="col-lg-10">
                                            <div class="checkbox">
                                                {{ form_widget(field) }}
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>

                        </fieldset>        
                        
                    </div>
                </section>
                {{ form_widget(form.btnSave, {'attr': {'class': 'btn btn-primary', 'id':'btnSave'}}) }}
                {{ form_widget(form.btnCancel, {'attr': {'class': 'btn btn-default', 'id':'btnCancel'}}) }}
            {{ form_end(form, {'render_rest': false}) }}

        </div>
    </div>   
{% endblock %}
