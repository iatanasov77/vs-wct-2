{% extends "layout.html.twig" %}
{% block title %}{{ parent() }} :: Installed Payment Methods{% endblock %}

{% block pageTitle %}<i class="icon_genius"></i> Installed Payment Methods{% endblock %}

{% block content %}
    <div class="row">   
        <div class="col-lg-12">
            <section class="panel">
                <table class="table table-striped table-advance table-hover">
                    <tr>
                        <th width="50">N</th>
                        <th>Payment Method</th>
                        <th>Gateway Factory</th>
                        <th width="150">Action</th>
                    </tr>
                    {% for key,config in methods %}
                        <tr>
                            <td>
                                {#<input type="checkbox" name="active[{{ gateway }}]" />#}
                                {{ loop.index }}
                            </td>
                            <td>
                                <a href="{{ path('ia_payment_methods_config', {'gatewayFactory': config.factory, 'gatewayName': config.gateway}) }}">
                                    {{ key }}
                                </a>
                            </td>
                            <td>{{ config.factory }}</td>
                            <td>
                                <div class="btn-group">
                                    <div class="btn-group">
                                        <a class="btn btn-primary" href="{{ path('ia_payment_methods_config', {'gatewayFactory': config.factory, 'gatewayName': config.gateway}) }}">
                                            <i class="glyphicon glyphicon-pencil"></i>
                                        </a>
                                        {#<a class="btn btn-danger btnDelete" href="{{ path('ia_payment_methods_config', {'gateway': key}) }}">
                                            <i class="icon_close_alt2"></i>
                                        </a>#}
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            </section>
        </div>
    </div>
{% endblock %}
