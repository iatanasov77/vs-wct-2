{% extends "layout.html.twig" %}
{% block title %}{{ parent() }} :: Users Management{% endblock %}

{% block pageTitle %}<i class="icon_genius"></i> Users Management{% endblock %}

{% block content %}
    <div class="row">   
        <div class="col-lg-12">
            <section class="panel">
                <table class="table table-striped table-advance table-hover">
                    <tr>
                        <th width="50">N</th>
                        <th>Name</th>
                        <th width="150">Action</th>
                    </tr>
                    {% for item in users %}
                        <tr>
                            <td>
                                <input type="checkbox" name="active[{{ item.getId() }}]" />
                                {{ item.getId() }}
                            </td>
                            <td>
                                <a href="{{ path('ia_users_users_update', {'id': item.getId()}) }}">
                                    {{ item.getFullName() }}
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            </section>
        </div>
    </div>
{% endblock %}
