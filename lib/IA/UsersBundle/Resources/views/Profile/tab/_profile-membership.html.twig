<h3>Membership</h3>
<section class="panel">
    <div class="panel-body bio-graph-info">
        <h1>Available Packages and Plans</h1>
        <div class="row">
            {% for pack in packages %}
                <fieldset class="fieldset-project-fields" style="width: 100%;">
                    <legend  class="w-auto">{{ pack.title }} </legend>
                    {% for plan in pack.getPlans() %}
                        <div class="row">
	                        <div class="d-flex justify-content-between align-items-center">
	                            <div class="col-lg-12 col-lg-offset-1">
	                                <span>{{ plan.getPlan() }} </span>: {{ plan.getPrice() }}
	                            </div>
	                            {% if ( subscription and subscriptionDetails.active ) %}
	                                <span style="color:red; font-weight: bold;">Subscribed</span>
	                                
	                                {% if subscription.getPaymentMethod() == 'paypal_express_checkout_recurring_payment' %}
	                                	<div class="ml-4">
	                                    	<a class="btn btn-primary btn-sm" href="{{ path( 'ia_payment_paypal_express_checkout_cancel_recurring_payment', {'paymentId': subscription.getPaymentDetails().getId()} ) }}">
	                                    		Cancel Recurring Payment
	                                    	</a>
	                                    </div>
	                                {% endif %}
	
	                            {% else %}
	                                <a class="btn btn-primary" 
	                                    data-remote="false"  
	                                    data-toggle="modal" 
	                                    data-target="#dialogSelectPayment" 
	                                    
	                                    data-price="{{ plan.getPrice() }}"
	                                    data-planid="{{ plan.getId() }}"
	                                    
	                                    href="{{ path('ia_paid_membership_checkout_select_method', {'planId': plan.getId()}) }}"
	                                >Subscribe</a>
	                            {% endif %}
	                        </div>
                        </div>
                    {% endfor %}
                </fieldset>
            {% endfor %}
        </div>
    </div>
</section>
<section>
    <div class="row">
    </div>
</section>

