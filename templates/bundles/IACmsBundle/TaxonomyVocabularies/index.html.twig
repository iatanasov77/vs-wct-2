{% extends "admin/layout.html.twig" %}
{% block title %}{{ parent() }} :: List Vocabularies{% endblock %}

{% block pageTitle %}<i class="icon_genius"></i> List Vocabularies{% endblock %}

{% block content %}
    <div class="container-fluid  dashboard-content">
    	<!-- ============================================================== -->
        <!-- pageheader -->
        <!-- ============================================================== -->
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="page-header">
                    <h2 class="pageheader-title">Taxonomy Vocabularies</h2>
                    <p class="pageheader-text">Proin placerat ante duiullam scelerisque a velit ac porta, fusce sit amet vestibulum mi. Morbi lobortis pulvinar quam.</p>
                    <div class="page-breadcrumb">
                        <nav aria-label="breadcrumb">
                            {{ knp_menu_render('breadcrumbs', {'template': 'admin/menu/breadcrumb.html.twig'}) }}
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- end pageheader -->
        <!-- ============================================================== -->

        <div class="row">
            <div class="col-xl-6 col-lg-12 col-md-12 col-sm-12 col-12 mb-5">
                
                {% if vocabularies|length > 0 %}
                    <table class="table table-striped table-advance table-hover">
                        <tr>
                            <th width="50">N</th>
                            <th>Name</th>
                            <th width="150">Action</th>
                        </tr>
                        {% for item in vocabularies %}
                            <tr>
                                <td>
                                    <input type="checkbox" name="active[{{ item.id }}]" />
                                    {{ item.id }}
                                </td>
                                <td><a href="{{ path('ia_cms_taxonomy_vocabularies_update', {'id': item.id}) }}?id={{ item.id }}">{{ item.name }}</a></td>

                                <td>
	                                <div class="btn-group">
	                                    <div class="btn-group">
	                                        <a class="btn btn-success" href="{{ path('ia_cms_taxonomy_vocabularies_create', {'vocabularyId': item.id}) }}" title="Add Terms">
	                                            <i class="icon_plus_alt2"></i>
	                                        </a>
	                                        <a class="btn btn-primary" href="{{ path('ia_cms_taxonomy_vocabularies_update', {'id': item.id}) }}" title="Edit">
	                                            <i class="glyphicon glyphicon-pencil"></i>
	                                        </a>
	                                        <a class="btn btn-danger btnDelete" href="{{ path('ia_cms_taxonomy_vocabularies_delete', {'id': item.id}) }}" title="Delete">
	                                            <i class="icon_close_alt2"></i>
	                                        </a>
	                                    </div>
	                                </div>
	                            </td>
                            </tr>
                        {% endfor %}
                    </table>
                {% else %}
                    {{ alerts.info('sylius.ui.there_are_no_mappers_to_display'|trans) }}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

{% block endDocumentScripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('build/taxonomy-vocabolarities.js') }}"></script>
{% endblock %}
