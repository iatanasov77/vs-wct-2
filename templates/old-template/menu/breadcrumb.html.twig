{% block root %}
    {% set breadcrumbs = knp_menu_get_breadcrumbs_array(item) %}
    <ol class="breadcrumb">
    {% for link in breadcrumbs %}
        {%- if loop.index == 1 %}
            <li><i class="fa fa-home"></i><a href="/"  class="tip-bottom">Home</a></li>
        {%- elseif not loop.last %}
            <li><i class="icon_genius"></i><a href="{{ link.uri }}">{{ link.label | trans }}</a></li>
        {%- else %}
            <li><i class="icon_genius"></i>{{ link.label | trans }}</li>
        {%- endif %}
    {%- endfor %}
    </ol>
{% endblock %}
