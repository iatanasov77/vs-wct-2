<div class="row">
    <div class="col-sm-2">
        {{ form_widget(form.title, {'attr': {'class': 'form-control fieldTitle'}}) }}
    </div>
    <div class="col-sm-1">
        {{ form_widget(form.type, {'attr': {'class': 'form-control m-bot15 fieldType'}}) }}
    </div>
    <div class="col-sm-4">
        {{ form_widget(form.xquery, {
            'attr': {
                'class':        'form-control m-bot15 additionalFieldXquery',
                'data-title':   form.title.vars.value,
                'data-type':    form.type.vars.value,
                'data-page':    form.page.vars.value
            }
        }) }}
    </div>
    
    <div class="col-sm-1"></div>
    <div>{{ form_label(form.page) }}:</div>
    <div class="col-sm-2">
        {{ form_widget(form.page, {'attr': {'class': 'custom-control custom-radio project-field-source'}}) }}
    </div>
    
    <a href="javascript:;" class="btn btn-success btnAddField"><i class="icon_plus_alt2"></i></a>
    <a href="javascript:;" class="btn btn-danger btnRemoveField"><i class="icon_close_alt2"></i></a>
</div>
