{% extends "layout.html.twig" %}

{# Import Macros #}
{% import 'macros/alerts.html.twig' as alerts %}
{% from 'macros/misc.html.twig' import pagination %}

{# Override Blocs #}
{% block title %}{{ parent() }} :: List Projects{% endblock %}
{% block pageTitle %}<i class="icon_genius"></i> List Projects{% endblock %}
{% block content %}
    <div class="container-fluid  dashboard-content">
    	<!-- ============================================================== -->
        <!-- pageheader -->
        <!-- ============================================================== -->
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="page-header">
                    <h2 class="pageheader-title">Projects</h2>
                    <p class="pageheader-text">Proin placerat ante duiullam scelerisque a velit ac porta, fusce sit amet vestibulum mi. Morbi lobortis pulvinar quam.</p>
                    <div class="page-breadcrumb">
                        <nav aria-label="breadcrumb">
                            {{ knp_menu_render('breadcrumbs', {'template': 'menu/breadcrumb.html.twig'}) }}
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- end pageheader -->
        <!-- ============================================================== -->

        <div class="row">
            <div class="col-xl-6 col-lg-12 col-md-12 col-sm-12 col-12 mb-5">
                
                {% if items|length > 0 %}
                    <table class="table table-striped table-advance table-hover">
                        <tr>
                            <th width="50">N</th>
                            <th>Title</th>
                            <th width="150">Action</th>
                        </tr>
                        {% for item in items %}
                            <tr>
                                <td>
                                    <input type="checkbox" name="active[{{ item.getId() }}]" />
                                    {{ item.getId() }}
                                </td>
                                <td><a href="{{ path('ia_web_content_thief_projects_update', {'id': item.getId()}) }}?id={{ item.id }}">{{ item.getTitle() }}</a></td>

                                <td>
                                    <div class="btn-group">
                                        <div class="btn-group">
                                            <a class="btn btn-danger btnDelete" href="#" data-url="{{ path('ia_web_content_thief_projects_delete', {'id': item.id}) }}">
                                                <i class="icon_close_alt2"></i>
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </table>
                {% else %}
                    {{ alerts.info('sylius.ui.there_are_no_mappers_to_display'|trans) }}
                {% endif %}
            
                {{ pagination(items) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block body_scripts %}
    {{ parent() }}
    
    {{ encore_entry_script_tags( 'projects', null, 'new-template' ) }}
{% endblock %}
